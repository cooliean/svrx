{
  "name": "root",
  "private": true,
  "scripts": {
    "lint": "run-p lint:*",
    "lint:js": "eslint \"**/*.js\"",
    "fix": "run-p fix:*",
    "fix:js": "eslint \"**/*.js\" --fix",
    "test": "lerna run test",
    "postinstall": "lerna bootstrap"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "coveralls": "^3.0.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "expect.js": "^0.3.1",
    "husky": "^1.3.1",
    "lerna": "^3.6.0",
    "lint-staged": "^8.1.5",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
